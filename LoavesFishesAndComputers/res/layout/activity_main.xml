<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/b2"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dip" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="19dp"
        android:text="DISCLAIMER: Loaves, Fishes, and Computers Inc. is not responsible for any data lost or damages of any kind from using this application."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/basket2" />

     <ImageButton
         android:id="@+id/imageButton1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/imageView2"
         android:layout_below="@+id/imageView2"
         android:background="@drawable/no_back"
         android:onClick="sendMessage"
         android:src="@drawable/logo_copy" />

</RelativeLayout>