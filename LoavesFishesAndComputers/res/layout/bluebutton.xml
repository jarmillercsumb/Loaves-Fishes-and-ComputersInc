<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- DISABLED -->
    <item android:state_enabled="false" >
        <shape>
            <gradient
                android:startColor="#888888"
                android:endColor="#444444"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#444444" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <!-- PRESSED -->
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#20419B" />
            <stroke
                android:width="1dp"
                android:color="#20419B" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <!-- FOCUSED -->
    <item android:state_focused="true" >
        <shape>
            <solid
                android:color="#0791C6" />
            <stroke
                android:width="1dp"
                android:color="#20419B" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <!-- DEFAULT -->
    <item>
        <shape>
            <gradient
                android:startColor="#0000FF"
                android:endColor="#000088"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#000088" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>